class PhishingDetector:
    def __init__(self, URL):
        self.url = URL
        self.parsed_link = self.url.split(".")
        self.is_safe = True

    # parses the URL and extracts components
    # such as scheme, domain, path, and query parameters
    def parse_url(self):
        global parsed
        parsed = urlparse(self.url)
        print("Scheme (http or https):", parsed.scheme)
        print("Domain:", parsed.netloc)
        print("Path:", parsed.path)
        print("Query Params:", parsed.query)
        return parsed 

    # Scrutinizes the URL to determine if it is phishing
    # or not based on various checks 
    def scrutinize(self):
        if parsed.netloc in AUTHENTIC_WEBSITES_LIST:
            # Check if the URL is in the list of authentic websites
            self.is_safe = True
        else:
            prefix_score = self.prefix_checker(self.url)
            tld_score = self.TLD_checker()
            ip_score = self.IP_address_checker()
            length_score = self.length_checker()
            # Calculate the final score
            final_score = (prefix_score + tld_score + ip_score + length_score) / 4
            # Determine if the URL is phishing based on the final score
            if final_score < 2:
                self.is_safe = False
                log = "The URL is phishing."
                print(log)
            else:
                self.is_safe = True
                log = "The URL is safe."
                print(log) 
        return self.is_safe, "This URL is authentic."      
        
    
    def prefix_checker(self, url):
        parsed = urlparse(url)
        try:
            scheme = parsed.scheme.lower()
            if scheme == "http":
                return 1
            elif scheme == "https":
                if random.random() < 0.6:
                    return 3
                else:
                    return 5
            else:
                return 1  # fallback for unusual schemes like ftp or blank
        except AttributeError:
            return 1
            log = "Error: Invalid URL format"
            print(log)

    # Check the TLD of the URL   
    def TLD_checker(self):
        parsed = urlparse(self.url)
        try:
            domain = parsed.netloc
            tld = domain.split(".")[-1]

            if tld in ["com", "net", "org", "io", "co"]:
                return 3
            elif tld in ["info", "biz"]:
                return 2
            else:
                return 1
        except AttributeError:
            return 1
            log = "Error: Invalid URL format"
            print(log)
    
    # Check if the URL contains an IP address    
    def IP_address_checker(self):
        parsed = urlparse(self.url)
        domain = parsed.netloc
        if domain.replace(".", "").isdigit():
            return 1
        else:
            return 3

    def length_checker(self):
        parsed = urlparse(self.url)
        length = len(parsed.path)
        if length < 20:
            return 3
        elif length < 50:
            return 2
        else:
            return 1
        

        """"   
        prefix_checker()
        TLD_checker()
        IP_address_checker()
        length_checker()
        """
    
        
        

checker = PhishingDetector(UrlLink)
result = checker.parse_url()
Phish = checker.scrutinize()
print("Phishing Status:", Phish[0])
print("Phishing Status:", Phish[1])
print(result)
